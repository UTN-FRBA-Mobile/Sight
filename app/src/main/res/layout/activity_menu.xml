<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprincipal2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuPrincipal">


    <TextView
        android:text="Bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bienvenida"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <ImageButton
        android:id="@+id/botonPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:onClick="perfil"
        app:srcCompat="@drawable/menuprincipal_perfil" />


        <ImageButton
            android:id="@+id/botonInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/botonPerfil"
            android:background="@android:color/transparent"
            android:clickable="false"
            app:srcCompat="@drawable/menuprincipal_inicio" />


        <ImageButton
            android:id="@+id/botonNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/botonInicio"
            android:background="@android:color/transparent"
            android:clickable="false"
            app:srcCompat="@drawable/menuprincipal_notificaciones" />


    <ImageButton
        android:id="@+id/botonPanico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonRobo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="55dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="sos"
        app:srcCompat="@drawable/menuprincipal_iconopanico" />

        <ImageButton
            android:id="@+id/botonAmbulancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/botonAyudaVecino"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="55dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            app:srcCompat="@drawable/menuprincipal_iconoambulancia" />


        <ImageButton
            android:id="@+id/botonRobo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="140dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="robo"
            app:srcCompat="@drawable/menuprincipal_iconorobo" />


        <ImageButton
            android:id="@+id/botonAyudaVecino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="215dp"
            android:layout_marginBottom="135dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            app:srcCompat="@drawable/menuprincipal_iconoayudavecino" />


    </RelativeLayout>







