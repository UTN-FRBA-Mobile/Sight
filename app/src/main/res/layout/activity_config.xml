<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rsa.sight.ConfigActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableCampos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/aceptar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaFila1" >

            <TextView
                android:text="IP Server:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ip_server" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="IP Server"
                android:ems="13"
                android:id="@+id/ipCampo"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:enabled="true"
                android:clickable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaFila2" >

            <TextView
                android:text="Port Server:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/port_server" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Port Server"
                android:ems="13"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:id="@+id/portCampo"
                android:enabled="true"
                android:clickable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaFila3" >

            <TextView
                android:text="DB Username:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/db_user" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="DB Username"
                android:ems="13"
                android:id="@+id/db_userCampo"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:enabled="true"
                android:clickable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaFila4" >

            <TextView
                android:text="DB Password:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/db_pass" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="DB Password"
                android:ems="13"
                android:id="@+id/db_passCampo"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:enabled="true"
                android:clickable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaFila5" >

            <TextView
                android:text="DB Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/db_name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="DB Name"
                android:ems="13"
                android:id="@+id/db_nameCampo"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:enabled="true"
                android:clickable="false" />
        </TableRow>

    </TableLayout>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/aceptar"
        android:onClick="aceptar" />

</RelativeLayout>
